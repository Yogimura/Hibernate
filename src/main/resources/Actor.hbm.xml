<hibernate-mapping package="DP_Java.Associations.Cinema" xmlns="http://www.hibernate.org/xsd/orm/hbm">
    <class name="Actor" table="Actors">
        <id name="id" column="Actor_id">
            <generator class="assigned" />
        </id>
        <property name="firstName" column="Name"/>
        <property name="lastName" column="LastName" />
        <property name="shortName" column="Alias"/>
    </class>

    <class name="Actorbi" table="ActorsBi">
        <id name="id" column="Actor_id">
            <generator class="assigned"/>
        </id>
        <property name="firstName" column="Name" />
        <property name="lastName" column="Lastname" />
        <property name="shortName" column="Alias" />
        <many-to-one name="movie" column="Movie_bi" class="Moviebi"/>
    </class>
</hibernate-mapping>